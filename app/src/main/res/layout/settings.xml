<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:layout_margin="3dp"
            android:background="#333086"
            app:layout_constraintBottom_toTopOf="@+id/buttonhide2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView9"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="@string/sound"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.060000002" />

            <ToggleButton
                android:id="@+id/toggleButtonSound"
                style="@style/MyStyleButton"
                android:layout_width="300dp"
                android:layout_height="49dp"
                android:checked="true"
                android:text="ToggleButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="Вибрация"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toggleButtonSound"
                app:layout_constraintVertical_bias="0.0" />

            <ToggleButton
                android:id="@+id/toggleButtonVibration"
                style="@style/MyStyleButton"
                android:layout_width="300dp"
                android:layout_height="49dp"
                android:checked="true"
                android:text="ToggleButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintVertical_bias="0.0" />


        <Button
            android:id="@+id/buttonhide2"
            style="@style/MyStyleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>