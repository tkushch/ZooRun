    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        android:background="#333086"
    >
        <TextView
                android:textColor="@android:color/white"
                android:text="@string/sound"
                android:layout_width="300dp"
                android:layout_margin="5dp"
                android:textSize="25dp" android:layout_height="40dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView9"
                app:layout_constraintVertical_bias="0.060000002"/>
        <ToggleButton
                android:checked="true"
                android:text="ToggleButton"
                android:layout_width="300dp"
                android:layout_height="49dp" android:id="@+id/toggleButtonSound"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:textColor="@android:color/white"
                android:text="Вибрация"
                android:layout_width="300dp"
                android:layout_margin="5dp"
                android:textSize="25dp" android:layout_height="40dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView10"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/toggleButtonSound"/>
        <ToggleButton
                android:checked="true"
                android:text="ToggleButton"
                android:layout_width="300dp"
                android:layout_height="49dp" android:id="@+id/toggleButtonVibration"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

        <Button
            style="@style/MyStyleButton"
            android:id="@+id/buttonhide2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
