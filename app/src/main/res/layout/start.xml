<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layo1"
    android:background="#0F4444"
    android:orientation="vertical">


    <Button

            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="#555555"
            android:id="@+id/start_button"
            android:layout_width="234dp"
            android:layout_height="68dp"
            android:text="Играть"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.37"/>
    <SeekBar
            android:progress="2"
            android:min="1"
            android:max="3"
            android:layout_width="220dp"
            android:layout_height="49dp" android:id="@+id/seekBar_level"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.19999999"/>
    <TextView
            android:gravity="center"
            android:text="Сложность"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_width="361dp"
            android:layout_height="39dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.26" app:layout_constraintHorizontal_bias="0.65"/>
    <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#555555"
            android:textSize="25dp"
            android:text="1"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/seekBar_level"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_level" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#555555"
            android:textSize="25dp"
            android:text="2"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_level"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView2"/>
    <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#555555"
            android:textSize="25dp"
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/seekBar_level"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_level" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.01"/>


</androidx.constraintlayout.widget.ConstraintLayout>