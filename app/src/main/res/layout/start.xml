<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layo1"
    android:background="#0F4444"
    android:orientation="vertical">


    <ScrollView
            android:background="#0F4444"
            android:alpha="0"
            android:layout_width="390dp"
            android:layout_height="523dp" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintVertical_bias="0.427" android:id="@+id/scrollView2"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_info"
                  android:textColor="#FFFFFF"
                  android:text="@string/info"
                  android:textSize="25dp"
                  android:layout_margin="10dp">
        </TextView>
    </ScrollView>
    <Button

            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="#555555"
            android:id="@+id/start_button"
            android:layout_width="234dp"
            android:layout_height="68dp"
            android:text="Играть"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.37"/>
    <TextView
            android:gravity="center"
            android:text="Сложность"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_width="361dp"
            android:layout_height="39dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.19"/>
    <Button
            android:text="Информация"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <Button
            android:alpha="0"
            android:enabled="false"
            android:text="Назад"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backinfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:id="@+id/constraintlayo"
            android:layout_width="220dp"
            android:layout_height="117dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.18">

        <TextView
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="#555555"
                android:textSize="25dp"
                android:text="1"
                android:layout_width="40dp"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/seekBar_level"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView

                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="#555555"
                android:textSize="25dp"
                android:text="2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/seekBar_level"/>
        <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="#555555"
                android:textSize="25dp"
                android:text="3"
                android:layout_width="40dp"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/seekBar_level"
                app:layout_constraintHorizontal_bias="1.0"/>
        <SeekBar
                android:progress="1"
                android:min="1"
                android:max="3"
                android:layout_width="220dp"
                android:layout_height="49dp" android:id="@+id/seekBar_level"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>