<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SaveRecordActivity"
    style="@style/MyStyleBackground">

    <EditText
        style="@style/textStandart"
        android:id="@+id/edit_text_name"
        android:layout_width="298dp"
        android:layout_height="72dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        style="@style/textStandart"
        android:layout_width="106dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:text="@string/score1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/savetobdsaveact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/tvrecord"
        style="@style/textStandart"
        android:layout_width="126dp"
        android:layout_height="70dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        style="@style/textStandart"
        android:layout_width="235dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:text="Введите имя"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvrecord"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/savetobdsaveact"
        style="@style/MyStyleButton"
        android:layout_width="235dp"
        android:layout_height="70dp"
        android:text="@string/save"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/seebasedatabutton"
        style="@style/MyStyleButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/local_data_base"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/savetobdsaveact"
        app:layout_constraintStart_toStartOf="@+id/savetobdsaveact"
        app:layout_constraintTop_toBottomOf="@+id/savetobdsaveact"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/button3back"
        style="@style/MyStyleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="@string/back_str"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/firebase_button"
        style="@style/MyStyleButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/firebase_data_base"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/seebasedatabutton"
        app:layout_constraintStart_toStartOf="@+id/seebasedatabutton"
        app:layout_constraintTop_toBottomOf="@+id/seebasedatabutton"
        app:layout_constraintVertical_bias="0.19999999" />

</androidx.constraintlayout.widget.ConstraintLayout>